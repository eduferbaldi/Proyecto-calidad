@model Planetario.Models.MaterialEducativoModel
@{
    ViewBag.Title = "Materiales";
}

<!DOCTYPE html>
<html>
<head>
    <title>Materiales Educativos</title>
    <meta charset="utf-8" />
    <link rel="stylesheet" type="text/css" href="~/Utils/css/main.css">
</head>
<body>
    <span class="titulo">
        Materiales Educativos
    </span>

    <form method="post" class="navbar-form navbar-right" action="@Url.Action("listadoDeMateriales", "MaterialEducativo")">
        <button type="submit" class="btn btn-secondary"> <span class="fa fa-home" aria-hidden="true"></span> Volver</button>
    </form>


    <table class="table table-hover well">
        <tr>
            <th>ID</th>
            <th>Título</th>
            <th>Público</th>
            <th>Educador</th>
            <th>Ver</th>
        </tr>
        @foreach (var material in ViewBag.materialesUnicos)
        {
            <tr>
                <td>@material.Titulo </td>
                <td>@material.Categoria </td>
                <td>@material.PublicoDirigido</td>
                <td>@material.NombreResponsable (@material.CorreoResponsable)</td>
                <td>
                    <h5>@Html.ActionLink("Ver más", "verMaterial", "MaterialEducativo", new { nombre = material.Titulo.ToString() }, new { @class = "h5" })</h5>
                </td>
            </tr>
        }
    </table>

</body>
</html>